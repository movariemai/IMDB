<br>
<!--Born This Month Carousel-->



<div class="container-fluid padding">
    <div class="row">
        <div class="col-1">

        </div>
        <div class="col-9" style="padding-bottom:unset;">
            <a asp-controller="Home" asp-action="BornThisMonth">
                <h1 class="display-4">Born On @DateTime.Now.ToString("MMMM", CultureInfo.InvariantCulture)</h1>
            </a>
            <h5>All these famous actors and actresses have their birthday this month!</h5>

        </div>
        <hr />
    </div>

    <div id="carousel-month" class="carousel slide" data-interval="false">
        <div class="carousel-inner">

            @foreach (var group in Model.Select((x, index) => new { element = x, index }).GroupBy(x => x.index / 5, x => x.element))
            {
                <div class="carousel-item @((group.Key == 0)?Html.Raw("active"):Html.Raw(""))">
                    <div class="row justify-content-center">

                        @foreach (var item in group)
                        {
                            <div class="col-2">
                                <div class="card card-dsp">
                                    @{
                        				string ImgPath = "https://image.tmdb.org/t/p/w300" + item.Profile_pic_path;
                    				}
                                    <a asp-controller="Actor" asp-action="Details" asp-route-id="@item.Id"><img src="@ImgPath" class="card-img-top" alt="..."></a>
									<div class="card-body">
										<a asp-controller="Actor" asp-action="Details" asp-route-id="@item.Id">
											<h6 class="card-title pb-1 text-truncate">@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</h6>
										</a>
										<div>
											<p class="card-text text-truncate text-muted small">@Html.DisplayFor(modelItem => item.Birthday)</p>
										</div>
									</div>
                                </div>
                            </div>
                        }

                    </div>

                </div>
            }

        </div>
        <a class="carousel-control-prev" href="#carousel-month" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel-month" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>
